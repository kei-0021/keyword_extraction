{
  "name": "Python Development with Fugashi",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "mounts": [
    "type=bind,source=/Users/keitahagiwara/Desktop/keyword_extraction/custom_dict,target=/custom_dict"
  ],
  "postCreateCommand": "pip install -r .devcontainer/requirements.txt && sudo ln -s /path/to/mecabrc /usr/local/etc/mecabrc && pip install mecab-python3",
  "remoteUser": "vscode"
}
